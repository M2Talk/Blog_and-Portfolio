<p id="notice"><%= notice %></p>

<h1>Angular portfolio items</h1>

<%= link_to 'New Item', new_portfolio_path if logged_in?(:site_admin) %>
<hr>

  <div>
    <%  @angular_portfolio_items.each do |portfolio_item| %>
      <div container>
        <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
        <p><%= portfolio_item.subtitle %></p>
        <p><%= portfolio_item.body %></p>
        <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
        <p><%= link_to 'Edit', edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %></p>
        <p><%= link_to 'Delete Item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>
        <hr>
      </div container>
    <% end %>
  </div>

