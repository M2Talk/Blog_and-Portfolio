<p id="notice"><%= notice %></p>

<h1>Portfolio items</h1>

<%= link_to 'New Item', new_portfolio_path %>
<hr>

  <div>
    <% @portfolio_items.each do |portfolio_item| %>
      <div container>
        <p><%= link_to portfolio_item.title %></p>
        <p><%= portfolio_item.subtitle %></p>
        <p><%= portfolio_item.body %></p>
        <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
        <p><%= link_to 'Edit', edit_portfolio_path(portfolio_item) %></p>
        <p><%= link_to 'Delete Item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <hr>
      </div container>
    <% end %>
  </div>

